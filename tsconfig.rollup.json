{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "actify": ["packages"]
    },
    "outDir": "lib",
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* Bundler mode */
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDeclarationOnly": true
  },
  "include": ["packages"]
}
